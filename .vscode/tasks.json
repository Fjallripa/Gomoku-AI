{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ Aktive Datei kompilieren",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-stdlib=libc++",
				"${file}",
				"-o",
				"${workspaceFolder}/compiled programs/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"	
			},

			"problemMatcher": [
				"$gcc",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Compiler: /usr/bin/clang++"
		}
	]
}